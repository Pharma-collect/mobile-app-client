<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ChoiceActivity">

    <ImageView
        android:id="@+id/headertitle"
        android:layout_width="360dp"
        android:layout_height="266dp"
        android:layout_above="@+id/iv_beat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/mypharma_blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/logo_my_pharma"
        android:layout_width="126dp"
        android:layout_height="112dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/logo_e_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_pharma" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/logo_e_shop"
        android:layout_width="132dp"
        android:layout_height="115dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/eshop_logo" />

    <TextView
        android:id="@+id/go_to_cac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/clickCo"
        app:layout_constraintEnd_toEndOf="@+id/logo_my_pharma"
        app:layout_constraintStart_toStartOf="@+id/logo_my_pharma"
        app:layout_constraintTop_toBottomOf="@+id/logo_my_pharma" />

    <TextView
        android:id="@+id/go_to_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/e_shop"
        app:layout_constraintEnd_toEndOf="@+id/logo_e_shop"
        app:layout_constraintStart_toStartOf="@+id/logo_e_shop"
        app:layout_constraintTop_toBottomOf="@+id/logo_e_shop" />

</androidx.constraintlayout.widget.ConstraintLayout>