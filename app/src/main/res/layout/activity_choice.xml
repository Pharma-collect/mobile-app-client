<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007F4D"
    android:id="@+id/act_choice"
    tools:context=".ChoiceActivity">

    <ImageView
        android:id="@+id/my_pharma"
        android:layout_width="350dp"
        android:layout_height="162dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mypharma_blanc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Choice menu"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/logo_my_pharma"
            android:layout_width="126dp"
            android:layout_height="112dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_login"
            app:srcCompat="@drawable/my_pharma" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/logo_e_shop"
            android:layout_width="132dp"
            android:layout_height="115dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/go_to_cac"
            app:srcCompat="@drawable/eshop_logo" />

        <TextView
            android:id="@+id/go_to_cac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/clickCo"
            app:layout_constraintEnd_toEndOf="@+id/logo_my_pharma"
            app:layout_constraintStart_toStartOf="@+id/logo_my_pharma"
            app:layout_constraintTop_toBottomOf="@+id/logo_my_pharma" />

        <TextView
            android:id="@+id/go_to_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/e_shop"
            app:layout_constraintEnd_toEndOf="@+id/logo_e_shop"
            app:layout_constraintStart_toStartOf="@+id/logo_e_shop"
            app:layout_constraintTop_toBottomOf="@+id/logo_e_shop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>