<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="prescriptionviewmodel"
            type="projetbe.romelemma.ui.prescriptions.PrescriptionsViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.prescriptions.PrescriptionsFragment">

        <TextView
            android:id="@+id/scanTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer votre ordonnance : "
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>


        <Button
            android:id="@+id/importCamera"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/scanTxt"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/bg_cam"
            />


        <Button
            android:id="@+id/importGallery"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/scanTxt"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_gal"
            />


        <ImageView
            android:id="@+id/prescriptionPicture"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/scanTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/sendPrescription"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/prescriptionPicture"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_send"

            />



    </RelativeLayout>

</layout>